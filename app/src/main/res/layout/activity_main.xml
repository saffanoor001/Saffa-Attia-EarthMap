<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:background="#F4F5F9"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ellipse_18"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_weight="500"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:lineHeight="20sp"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:text="Live Earth Map"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="262dp"
            android:layout_height="80dp"
            android:layout_weight="600"
            android:fontFamily="@font/Poppins_SemiBold"
            android:includeFontPadding="false"
            android:letterSpacing="-0.005"
            android:lineHeight="40sp"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:text="Let's Find Your Location"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/search_bar"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:paddingEnd="178dp"
            android:paddingBottom="16dp"
            app:cardCornerRadius="64dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/iconly" />

                <EditText
                    android:layout_width="121dp"
                    android:layout_height="50dp"
                    android:layout_weight="275"
                    android:background="@android:color/transparent"
                    android:hint="Search Location"
                    android:inputType="text"
                    android:padding="0dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.015"
            android:lineHeight="16sp"
            android:text="Categories"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>